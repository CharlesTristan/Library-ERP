<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chentong.erp.dao.SysUserDao">

    <resultMap type="com.chentong.erp.entity.SysUser" id="SysUserMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="salt" column="salt" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="deptId" column="dept_id" jdbcType="VARCHAR"/>
        <result property="realName" column="real_name" jdbcType="VARCHAR"/>
        <result property="nickName" column="nick_name" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="deleted" column="deleted" jdbcType="INTEGER"/>
        <result property="createId" column="create_id" jdbcType="VARCHAR"/>
        <result property="updateId" column="update_id" jdbcType="VARCHAR"/>
        <result property="createWhere" column="create_where" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>
    <select id="getRoleByUserId" parameterType="string" resultType="string">
        SELECT
            b.`name`
        FROM
            sys_user_role a
            LEFT JOIN sys_role b ON a.role_id = b.id
        WHERE
            b.`status` = 1
            AND b.deleted = 1
            AND a.user_id = #{id}
    </select>
    <select id="getPermissionByUserId"  parameterType="string" resultType="string">
        SELECT
            d.`name`
        FROM
            sys_user_role a
            LEFT JOIN sys_role b ON a.role_id = b.id
            LEFT JOIN sys_role_permission c ON b.id = c.role_id
            LEFT JOIN sys_permission d ON c.permission_id = d.id
        WHERE
            b.deleted = 1
            AND b.`status` = 1
            AND d.`status` = 1
            AND d.deleted = 1
            AND a.id = #{id}
    </select>

</mapper>